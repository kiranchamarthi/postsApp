<fieldset>
	<section class="solidbody">
		<legend><%= set_subheader("Posts") %></legend><br>		
			<% if @posts.present? %>
				
				<table  class="table table-striped table-bordered">
					<tr>
						<td> <b>Title</b> </td>
						<td> <b>Body</b> </td>
						<td> <b>Link</b> </td>
						<td> <b>Comments</b> </td>
					</tr>
					<% @posts.each do |post| %>
					<tr>
						<td> <%= post.title %> </td>
						<td> <%= post.body %> </td>
						<td> <%= link_to("Show", post_path(post), id: "hyperlink") %> </td>
						<td> <%= link_to("Comments", post_comments_path(post), id: "hyperlink") %> </td>
					</tr>
					<% end %>
				</table>
			<%else%>
					<p>
						<h5 class="subheader">No posts to show.</h5>
					</p>					
			<%end%>
			<%= link_to 'New', new_post_path, class: "btn btn-success"%>		
	</section>
</fieldset>